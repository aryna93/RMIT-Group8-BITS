<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.scheduler.SchedulerFragment">

    <com.google.android.material.chip.Chip
        android:id="@+id/chip11"
        android:layout_width="101dp"
        android:layout_height="43dp"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/chip5"
        tools:layout_editor_absoluteY="185dp"
        tools:text="Work" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip15"
        android:layout_width="101dp"
        android:layout_height="43dp"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/chip11"
        tools:layout_editor_absoluteY="185dp"
        tools:text="Hobbies" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip16"
        android:layout_width="101dp"
        android:layout_height="43dp"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/chip13"
        tools:layout_editor_absoluteY="228dp"
        tools:text="Study" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip5"
        android:layout_width="101dp"
        android:layout_height="43dp"
        android:layout_marginStart="32dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="185dp"
        tools:text="Motivation" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip10"
        android:layout_width="101dp"
        android:layout_height="43dp"
        android:layout_marginStart="32dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="228dp"
        tools:text="Fitness" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip13"
        android:layout_width="101dp"
        android:layout_height="43dp"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/chip10"
        tools:layout_editor_absoluteY="228dp"
        tools:text="Home" />

    <ImageView
        android:id="@+id/imageViewUserPic2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user_pic" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="130dp"
        android:layout_height="31dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="263dp"
        android:text="Today's Tasks"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="145dp" />

    <Button
        android:id="@+id/addTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Task"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="628dp" />

</androidx.constraintlayout.widget.ConstraintLayout>