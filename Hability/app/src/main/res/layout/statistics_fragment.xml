<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.statistics.StatisticsFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_secondary"
        app:tabTextColor="#C7FFFFFF"
        app:tabIndicatorColor="@color/yellow_primary"
        app:tabSelectedTextColor="@color/yellow_primary"
        app:tabBackground="@color/blue_primary"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager2_stats"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_layout_stats" >

    </androidx.viewpager2.widget.ViewPager2>

</RelativeLayout>